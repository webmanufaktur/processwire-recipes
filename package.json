{
  "name": "webmanufaktur.net",
  "version": "1.0.0",
  "description": "",
  "main": "README.md",
  "scripts": {
    "build:clean": "del _site",
    "watch:clean": "del _site",
    "watch:tailwind": "npx tailwindcss -i ./src/assets/css/tailwind.css -c tailwind.config.js -o ./_site/assets/css/tailwind.dist.css --watch",
    "build:tailwind": "npx tailwindcss -i ./src/assets/css/tailwind.css -c tailwind.config.js -o ./_site/assets/css/tailwind.dist.css --minify",
    "watch:eleventy": "npx @11ty/eleventy --serve",
    "build:eleventy": "npx @11ty/eleventy",
    "watch:alpine": "npx esbuild ./src/assets/js/alpine.js --bundle --target=es2018  --watch --outfile=./_site/assets/js/alpine.dist.js",
    "build:alpine": "npx esbuild ./src/assets/js/alpine.js --bundle --target=es2018 --minify --outfile=./_site/assets/js/alpine.dist.js",
    "watch:js": "npx esbuild ./src/assets/js/app.js --watch --outfile=./_site/assets/js/app.dist.js",
    "build:js": "npx esbuild ./src/assets/js/app.js --minify --outfile=./_site/assets/js/app.dist.js",
    "watch:favRecipes": "npx esbuild ./src/assets/js/favRecipes.js --watch --outfile=./_site/assets/js/favRecipes.dist.js",
    "build:favRecipes": "npx esbuild ./src/assets/js/favRecipes.js --minify --outfile=./_site/assets/js/favRecipes.dist.js",
    "watch:favPosts": "npx esbuild ./src/assets/js/favPosts.js --watch --outfile=./_site/assets/js/favPosts.dist.js",
    "build:favPosts": "npx esbuild ./src/assets/js/favPosts.js --minify --outfile=./_site/assets/js/favPosts.dist.js",
    "watch:jssearch": "npx esbuild ./src/assets/js/search.js --watch --minify --outfile=./_site/assets/js/search.dist.js",
    "build:jssearch": "npx esbuild ./src/assets/js/search.js --minify --outfile=./_site/assets/js/search.dist.js",
    "start": "npm-run-all --parallel watch:*",
    "build": "npm-run-all build:*"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:webmanufaktur/webmanufaktur.dev.git"
  },
  "keywords": [],
  "author": "webmanufaktur.net",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-fetch": "^4.0.0",
    "@11ty/eleventy-img": "^3.1.0",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.2.0",
    "@alpinejs/persist": "^3.12.0",
    "@tailwindcss/typography": "^0.5.9",
    "alpinejs": "^3.12.0",
    "clean-css": "^5.3.2",
    "del-cli": "^5.0.0",
    "dotenv": "^16.0.3",
    "eleventy-favicon": "^1.1.3",
    "eleventy-plugin-og-image": "^1.6.1",
    "eleventy-plugin-page-assets": "github:maxboeck/eleventy-plugin-page-assets",
    "eleventy-plugin-svg-contents": "^0.7.0",
    "eleventy-plugin-toc": "^1.1.5",
    "esbuild": "^0.17.15",
    "html-minifier": "^4.0.0",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "^8.6.7",
    "markdown-it-auto-crosslinker": "^1.0.1",
    "markdown-it-image-figures": "^2.1.1",
    "markdown-it-link-attributes": "^4.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "tailwindcss": "^3.3.1"
  }
}
