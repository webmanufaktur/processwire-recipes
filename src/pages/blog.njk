---
title: "Blog"
headline: "Blog"
intro: "Intro text here for blog"
permalink: "/blog/index.html"
layout: "base.html"
---
<!-- import macro -->
{% from "macros.html" import hero %}
<!-- for -->

<article>
  {{ hero(headline, intro) }}
  <section class="pw-gradient">
    <!-- -->
<ul class="space-y-8 md:space-y-12 max-w-2xl w-full mx-auto px-4">
  {% for item in collections.posts | sortNewOld %}
  <li>
    <div class="border-2 border-gray-100 bg-white p-6 md:p-8 rounded">
      <a href="{{ item.url }}" class="text-lg block">
        <span class="font-bold"> {{ item.data.title }} </span></a
      >
      <ul class="text-gray-500 text-sm tabular-nums leading-normal">
        <li>
          Added/Updated:
          <span class="font-semibold">{{ item.data.date | postDate }}</span>
        </li>
        <li>
          Authors:
          <span class="font-semibold">{{ item.data.authors }}</span>
        </li>
      </ul>

      <div class="mt-2 md:mt-4 flex gap-1 md:gap-2 flex-wrap">
        {% for tag in item.data.tags %} {% if tag != "posts" %} {% include
        "_partials/tag.html" %} {% endif %} {% endfor %}
      </div>
    </div>
  </li>
  {% endfor %}
</ul>
    <!-- -->


  </section>
</article>
